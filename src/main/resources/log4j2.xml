<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="error">
    <Properties>
        <Property name="foldername">logs</Property>
        <Property name="filename">${foldername}/app.log</Property>
    </Properties>
    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <ThresholdFilter level="debug"/>
            <PatternLayout
                    pattern="%d{yyyy-MM-dd HH:mm:ss} %highlight{%-5p}{FATAL=red, ERROR=red, WARN=yellow, INFO=blue, DEBUG=green} %highlight{%c{1}}{cyan}: %m%n%ex"/>
        </Console>
        <RollingFile name="ROLLING_FILE" fileName="${filename}"
                     filePattern="${foldername}/app-backup-%d{yyyy-MM-dd-HH-mm}-%i.log.gz">
            <ThresholdFilter level="debug"/>
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="2" modulate="true"/>
                <SizeBasedTriggeringPolicy size="100MB"/>
            </Policies>
            <DefaultRolloverStrategy max="20"/>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Logger name="com.gpcoder" level="debug" additivity="true">
            <AppenderRef ref="ROLLING_FILE"/>
        </Logger>
        <Root level="debug">
            <AppenderRef ref="STDOUT"/>
        </Root>
    </Loggers>
</Configuration>